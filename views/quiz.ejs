<%- include("partials/header.ejs") %>

    <div class="d-flex flex-column min-vh-100">

        <main class="flex-fill">
            <div class="quiz-container container my-4">
                <!-- Question Number -->
                <div class="question-number mb-2" id="question-number">
                    Question 1
                </div>

                <!-- Question Box -->
                <div class="question-box p-3 mb-3" id="question-box">
                    Question text will appear here
                </div>

                <!-- Options Container (2 per row) -->
                <div class="options-container d-flex flex-wrap gap-2 mb-3">
                    <div class="option">Option 1</div>
                    <div class="option">Option 2</div>
                    <div class="option">Option 3</div>
                    <div class="option">Option 4</div>
                </div>

                <!-- Navigation -->
                <div class="quiz-navigation d-flex justify-content-between">
                    <button id="prev-btn" class="btn btn-secondary">Previous</button>
                    <button id="next-btn" class="btn btn-primary">Next</button>
                </div>
            </div>
        </main>

    </div>

    <style>
        /* Question Box */
        .question-box {
            border: 2px solid #2563eb;
            border-radius: 12px;
            background-color: #f3f4f6;
            font-weight: 600;
            color: #111827;
            min-height: 150px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Options Container: 2 per row */
        .options-container {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .option {
            flex: 1 1 calc(50% - 0.5rem);
            /* Two per row */
            min-height: 60px;
            border: 2px solid #2563eb;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.2s ease;
            text-align: center;
        }

        .option:hover {
            background-color: #2563eb;
            color: #fff;
            transform: translateY(-2px);
        }
    </style>

    <script>
        const questions = [
            { text: "Question 1", options: ["A1", "B1", "C1", "D1"] },
            { text: "Question 2", options: ["A2", "B2", "C2", "D2"] },
            { text: "Question 3", options: ["A3", "B3", "C3", "D3"] }
        ];

        let currentQuestion = 0;
        const questionBox = document.getElementById('question-box');
        const questionNumber = document.getElementById('question-number');
        const optionBoxes = document.querySelectorAll('.option');

        function loadQuestion(index) {
            questionNumber.textContent = `Question ${index + 1}`;
            const q = questions[index];
            optionBoxes.forEach((opt, i) => {
                opt.textContent = q.options[i];
            });
            questionBox.textContent = q.text;
        }

        document.getElementById('next-btn').addEventListener('click', () => {
            if (currentQuestion < questions.length - 1) {
                currentQuestion++;
                loadQuestion(currentQuestion);
            }
        });

        document.getElementById('prev-btn').addEventListener('click', () => {
            if (currentQuestion > 0) {
                currentQuestion--;
                loadQuestion(currentQuestion);
            }
        });

        loadQuestion(currentQuestion);
    </script>

    <%- include("partials/footer.ejs") %>