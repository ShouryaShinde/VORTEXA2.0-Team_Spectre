<%- include("partials/header.ejs") %>

<div class="upload-container">
  <h1>Upload Your Educational Content</h1>
  <p>Upload video files or paste YouTube URLs to get started with AI-powered transcription and summarization</p>

  <div class="source-selector">
    <button class="active" id="upload-file-btn">Upload File</button>
    <button id="youtube-url-btn">YouTube URL</button>
  </div>

  <div class="upload-area" id="upload-area">
    <div class="upload-icon">⬆️</div>
    <p>Drop your video file here</p>
    <span>Supports MP4, AVI, MOV, and other common video formats</span>
    <input type="file" id="file-input" name="videoFile" hidden />
    <button id="browse-btn">Browse...</button>
  </div>
</div>




