    @media (max-width: 768px) {
      div[style*="linear-gradient(135deg"] {
        flex-direction: column;
      }
    }
  </style>
<script>
  const fileInput = document.getElementById('file-input');
  const browseBtn = document.getElementById('browse-btn');
  const uploadArea = document.getElementById('upload-area');

  // Clicking "Browse" triggers the hidden file input
  browseBtn.addEventListener('click', () => {
    fileInput.click();
  });

  // When a file is selected
  fileInput.addEventListener('change', (event) => {
    const file = event.target.files[0];
    if (file) {
      // Show file name in the upload area
      uploadArea.querySelector('p').textContent = `Selected file: ${file.name}`;

      // Optionally, trigger an automatic upload here
      // uploadFile(file); // <-- Implement your upload logic

      // Optional: highlight upload area
      uploadArea.style.border = "2px solid #34d399";
    }
  });

  // Optional: Drag & drop support
  uploadArea.addEventListener('dragover', (e) => {
    e.preventDefault();
    uploadArea.style.background = "#f0fdf4";
  });

  uploadArea.addEventListener('dragleave', (e) => {
    e.preventDefault();
    uploadArea.style.background = "#fff";
  });

  uploadArea.addEventListener('drop', (e) => {
    e.preventDefault();
    const file = e.dataTransfer.files[0];
    if (file) {
      fileInput.files = e.dataTransfer.files; // Sync with hidden input
      uploadArea.querySelector('p').textContent = `Selected file: ${file.name}`;
      uploadArea.style.border = "2px solid #34d399";
      // uploadFile(file); // <-- Trigger upload if needed
    }
  });
</script>





